<h1 class="cart-title">TU CARRITO!</h1>
<main class="mx-8">
    {{#each carts}}
        <div class="border border-cyan-600 p-8">
            <h3>Producto {{@index}}</h3>
            <br>
            <p>TITULO: {{this.product_id.title}}</p>
            <p>PRECIO: {{this.product_id.price}}</p>
            <p>STOCK: {{this.product_id.stock}}</p>
            <br>
            <p>Cantidad: {{this.quantity}}</p>
            {{#if (compareFirst this.quantity this.product_id.stock)}}
                <p>Sin Stock</p>
            {{/if}}
            <button class="border border-red-400 rounded-md px-4 py-2 hover:bg-red-300 hover:text-neutral-800 transition-colors remove-product-button" id="remove-product-button-{{@index}}" cart-to-remove="{{cart_id}}" product-to-remove="{{this.product_id._id}}"> QUITAR</button>
        </div>
    {{/each}}
    {{#if (isEmpty carts)}}
        <button> AÃºn no tienes ningun Producto </button>
    {{else}}
        <button class="border border-orange-400 rounded-md px-4 py-2 hover:bg-orange-300 hover:text-neutral-800 transition-colors mt-2" id="cart-purchase-button" data-cart-id="{{cart_id}}"> Realizar compra </button>
    {{/if}}
</main>
<script src="/js/cart.js"></script>

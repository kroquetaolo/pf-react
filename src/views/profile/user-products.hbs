<div class="flex flex-col text-center p-8">
    <h1>Estos son los productos registrados a nombre de "{{user.first_name}}" al correo "{{user.email}}"</h1>
    {{#each products}}
    <div class="flex flex-col text-left border border-orange-300 rounded-md p-2 m-4 gap-2">
        <h1>{{this.title}}</h1>
        <p>{{this.description}}</p>
        <p>${{this.price}}</p>
        <p>{{this.category}}</p>
        <button class="deleteButton border rounded-md border-neutral-200 hover:bg-neutral-300 hover:text-neutral-900 transition" data-product-id="{{this._id}}">Delete</button>
    </div>
{{/each}}
</div>
<script src="/js/user-product.js"></script>
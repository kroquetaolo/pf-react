<form class="flex flex-col items-center justify-center gap-2 py-5" action="/api/products" method="post" enctype="multipart/form-data" >
    <h1>Genera tu propio producto</h1>

    <div class="flex w-full justify-center">
        <span class="w-24">Title</span>
        <input class="comp-form-input w-[40%]" type="text" id="title" name="title" placeholder="Enter product title">
    </div>
    <div class="flex w-full justify-center">
        <span class="w-24">Description</span>
        <input class="comp-form-input w-[40%]" type="text" id="description" name="description" placeholder="Enter product description">
    </div>
    <div class="flex w-full justify-center">
        <span class="w-24">Stock</span>
        <input class="comp-form-input w-[40%]" type="number" id="stock" name="stock" placeholder="Enter stock quantity">
    </div>
    <div class="flex w-full justify-center">
        <span class="w-24">Price</span>
        <input class="comp-form-input w-[40%]" type="number" id="price" name="price" placeholder="Enter product price">
    </div>
    <div class="flex w-full justify-center">
        <span class="w-24">Category</span>
        <select class="comp-form-input w-[40%]" id="category" name="category" required>
                <option class="font-bold text-neutral-900" value="" disabled selected>Select a category</option>
                <option value="electronics">Electr√≥nica</option>
                <option value="fashion">Moda</option>
                <option value="books">Libros</option>
                <option value="home">Hogar</option>
        </select>
    </div>
    <div>
        <input type="hidden" name="type" value="product">
    </div>
    <div class="flex w-full justify-center">
        <span class="w-24">Thumbnail</span>
        <input class="comp-form-input w-[40%]" type="file" name="uploaded_file" multiple required>
    </div>
    <input class="bg-orange-600 text-black hover:bg-orange-400 rounded-md px-4 py-2 mt-2 font-bold" type="submit" value="Agregar"/>
</form>
